<%= turbo_frame_tag dom_id(post) do %>
  <div class="bg-background shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h1 class="text-3xl font-bold text-primary"><%= link_to post.title, post %></h1>
    </div>
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <p class="text-text"><%= truncate(post.content, length: 150) %></p>
    </div>
    <div class="border-t border-gray-200 bg-background px-4 py-5 sm:px-6">
      <div class="flex items-center justify-between">
        <div class="flex space-x-2">
          <%= link_to 'Edit', edit_post_path(post), class: 'bg-secondary hover:bg-accent text-white font-bold py-2 px-4 rounded mr-2', data: { turbo_frame: dom_id(post) } %>
          <%= button_to 'Delete', post, method: :delete, class: 'bg-accent hover:bg-secondary text-white font-bold py-2 px-4 rounded', form: { data: { turbo_confirm: 'Are you sure?' } } %>
        </div>
        <%= link_to 'Back', posts_path, class: 'bg-primary hover:bg-secondary text-white font-bold py-2 px-4 rounded' %>
      </div>
    </div>
  </div>
<% end %>