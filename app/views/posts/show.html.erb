<div class="bg-background shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h1 class="text-3xl font-bold text-primary"><%= @post.title %></h1>
  </div>
  <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
    <p class="text-text"><%= @post.content %></p>
  </div>
  <div class="border-t border-gray-200 bg-primary px-4 py-5 sm:px-6">
    <%= link_to 'Edit', edit_post_path(@post), class: 'bg-secondary hover:bg-accent text-white font-bold py-2 px-4 rounded mr-2' %>
    <%= link_to 'Back', posts_path, class: 'bg-primary hover:bg-secondary text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>